<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Mobile.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
             
            <Grid VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>

                <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0"></Entry>
                <Entry Placeholder="Password" x:Name="EntryPassword" IsPassword="True" Grid.Row="1"></Entry>
                <Button Text="Login" Grid.Row="2" BackgroundColor="CadetBlue" TextColor="AliceBlue" Clicked="Button_OnClicked1"></Button>
                <Button Text="SignUp" Grid.Row="3" BackgroundColor="CadetBlue" TextColor="AliceBlue" Clicked="Button_OnClicked"></Button>


            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>